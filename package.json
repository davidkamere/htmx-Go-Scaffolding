{
  "name": "go-htmx-tailwind-scaffolding",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./web/assets/input.css -o ./web/assets/build.css --minify",
    "watch:css": "tailwindcss -i ./web/assets/input.css -o ./web/assets/build.css --watch",
    "build:vendor": "mkdir -p ./web/assets/vendor && cp ./node_modules/htmx.org/dist/htmx.min.js ./web/assets/vendor/htmx.min.js"
  },
  "devDependencies": {
    "htmx.org": "^2.0.4",
    "tailwindcss": "^3.3.5"
  }
}
